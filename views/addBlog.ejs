<!DOCTYPE html>
<html lang="en">
<head>
  <title>Add Blog</title>
  <%- include('./partials/head') %>
</head>

<body>
  <%- include('./partials/navbar') %>

  <main class="container py-4">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">
        <div class="card">
          <div class="card-body">
            <h1 class="h4 mb-3">Create a new blog</h1>

            <form action="/blog" method="POST" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
              </div>

              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="title" placeholder="Enter a title">
              </div>

              <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea class="form-control" name="body" placeholder="Write your blog here" id="body" rows="8"></textarea>
              </div>

              <button type="submit" class="btn btn-primary">Publish</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('./partials/scripts') %>

</body>

</html>